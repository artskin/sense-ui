@import 'var.styl';
@import 'mixin.styl';
  
//原始变量-css调用
:root{
  --success:success;
  --warning:warning;
  --primary:primary;
  --danger :danger;
  --default:#f7f8f9;
  --higligt:higligt;
  
  /*文字*/
  --primary-text:#636e95;
  --ggs:1;
  --backdrop-value:blur(20px) saturate(180%);
}
//计算变量-stylus计算后调用
html{
  //FIX:编译后属性名变量不能传入问题
  colorGroup(--primary,primary);
  colorGroup(--success,success);
  colorGroup(--warning,warning);
  colorGroup(--danger,danger);
}
